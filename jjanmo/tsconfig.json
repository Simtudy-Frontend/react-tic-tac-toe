{
  "compilerOptions": {
    "target": "es2016",
    "outDir": "./dist/",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "jsx": "react-jsx",
    "paths": {
      "@/*": ["src/*"]
    },
    "noEmit": true
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src"]
}
